<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Fragment.Build_Fragment"
    android:orientation="vertical"
    android:background="@drawable/wave3"
    android:backgroundTint="#9C27B0"
    >




    <LinearLayout
        android:id="@+id/Available_services"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:background="@drawable/backshape2"
        android:backgroundTint="#191010"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"

        >
        <TextView
            android:id="@+id/Maintenance_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Consumer"
            android:textColor="@color/white"

            android:textSize="30sp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="12dp"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:backgroundTint="#E8BDBD"
        android:layout_marginTop="100dp"


        >



        <TextView
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/Consumption_value"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            />
        <TextView
            android:id="@+id/Consumption_value"

            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="32sp"
            android:textColor="@color/bottom_nav_color"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:backgroundTint="#E8BDBD"
        android:layout_marginTop="50dp"


        >



        <TextView
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/consumption_date"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            />
        <TextView
            android:id="@+id/consumption_date"

            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="32sp"
            android:textColor="@color/bottom_nav_color"

            />
    </LinearLayout>

    <Button
        android:id="@+id/button_Fixed"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:backgroundTint="#FF5722"
        android:text="@string/Reason_for_consumption"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_bold"

        />


</LinearLayout>