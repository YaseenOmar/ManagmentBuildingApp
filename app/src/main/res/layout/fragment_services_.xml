<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/wave3"
    tools:context=".Main_Fragment.Services_Fragment">


<LinearLayout
    android:id="@+id/Available_services"
    android:layout_width="370dp"
    android:layout_height="70dp"
    android:background="@drawable/backshape2"
    android:backgroundTint="#191010"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:id="@+id/text_Available_services"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/Available_Services"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
    <LinearLayout

        android:id="@+id/water"

        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:layout_height="wrap_content"
        android:backgroundTint="#E1AAAA">
        <TextView
            android:id="@+id/text_water"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/water"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginStart="30dp"
            android:backgroundTint="#E89B9B"
/>
        <TextView
            android:id="@+id/sweet_wate"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sweet_water"
            android:textSize="28sp"
            android:layout_marginStart="10dp"

            />

   </LinearLayout>

    <LinearLayout
        android:id="@+id/electricity_municipality"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/backshape2"
        android:backgroundTint="#E1AAAA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/electricity"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="#E89B9B"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/electricity"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/municipality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/municipality"
            android:textSize="28sp"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Security"
        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:layout_height="wrap_content"
        android:backgroundTint="#E1AAAA">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Security"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginStart="90dp"
            android:backgroundTint="#E89B9B"
            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/Sublimated"

        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:layout_height="wrap_content"
        android:backgroundTint="#E1AAAA">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Sublimated"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginStart="110dp"
            android:backgroundTint="#E89B9B"
            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/The_Cleaner"
        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:layout_height="wrap_content"
        android:backgroundTint="#E1AAAA">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/The_Cleaner"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginStart="110dp"
            android:backgroundTint="#E89B9B"
            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/Fund_Services"
        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/backshape2"
        android:layout_height="50dp"
        android:backgroundTint="#E1AAAA">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Fund_Services"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginStart="0dp"
            android:backgroundTint="#E89B9B"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/emergency_maintenance"

        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/backshape2"
        android:layout_height="50dp"
        android:backgroundTint="#E1AAAA">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/emergency_maintenance"


            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_marginStart="0dp"
            android:backgroundTint="#E89B9B"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/Periodic_Maintenance"
        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/backshape2"
        android:layout_height="50dp"
        android:backgroundTint="#E1AAAA">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Periodic_maintenance"
            android:gravity="center"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_marginStart="0dp"
            android:backgroundTint="#E89B9B"
            />



    </LinearLayout>




<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginStart="20dp"
    android:layout_gravity="center"
android:layout_marginTop="10dp"
    >
<Button
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/The_Cleaner"
    android:backgroundTint="#FF9800"
    android:textSize="18sp"
    android:textAllCaps="false"

    />
<Button
    android:layout_marginStart="20dp"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/Security"
    android:backgroundTint="#FF9800"
    android:textSize="16sp"
    android:textAllCaps="false"

    />

</LinearLayout>
</LinearLayout>