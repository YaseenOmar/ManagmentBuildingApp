<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave3"
android:orientation="vertical"

    >

    <LinearLayout

        android:id="@+id/Available_services"
        android:layout_marginStart="5dp"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:background="@drawable/backshape2"
        android:backgroundTint="#191010"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        >
        <TextView
            android:id="@+id/text_Available_services"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_marginStart="100dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/The_Cleaner"
            android:textColor="@color/white"
            android:textSize="32sp"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="400dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:backgroundTint="#E8BDBD"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:gravity="center"

            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/name_of_employe"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"

            />

        <TextView
            android:id="@+id/name_building"

            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/name_of_employe"
            android:textSize="22sp"
            android:textColor="@color/black"


            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="400dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:backgroundTint="#E8BDBD"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text=" beneficiary"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"

            />

        <TextView

            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/beneficiary"
            android:textSize="22sp"
            android:textColor="@color/black"
/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:backgroundTint="#E8BDBD"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/non_beneficiary"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"

            />

        <TextView

            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/non_beneficiary"
            android:textSize="22sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/backshape2"
        android:backgroundTint="#E8BDBD"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/Salary"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"

            />

        <TextView

            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/Salary"
            android:textSize="22sp"
            android:textColor="@color/black"
            />
    </LinearLayout>


</LinearLayout>